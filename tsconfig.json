{
    "compilerOptions": {
        "module": "commonjs",
        "lib": [
          "es7",
          "dom"
        ],
        "target": "es6",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "typeRoots": [
          "./node_modules/@types"
        ]
    },
    "include": [
        "*.ts",
        "**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
}
