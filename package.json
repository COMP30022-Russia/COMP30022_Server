{
  "name": "russia_server",
  "version": "1.0.0",
  "description": "Server for Team Russia",
  "main": "server.ts",
  "scripts": {
    "start": "node server.js",
    "dev": "npm run build && concurrently --kill-others \"tsc --watch\" \"nodemon dist/server.js\" \"cpx -w tests/**/*.png dist/\"",
    "build": "tsc && cpx tests/**/*.png dist/tests && cp package*.json dist/",
    "test": "cross-env PORT=5000 nyc --reporter=text-summary mocha -t 10000 --reporter=list dist/tests/index.js",
    "prettify": "prettier --single-quote --tab-width 4 --write \"**/*.ts\"",
    "linter": "tslint -c tslint.json -p tsconfig.json",
    "report": "nyc report --reporter=html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/COMP30022-18/Russia_Server.git"
  },
  "author": "Team Russia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/COMP30022-18/Russia_Server/issues"
  },
  "homepage": "https://github.com/COMP30022-18/Russia_Server#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "cron": "^1.4.1",
    "express": "^4.16.4",
    "firebase-admin": "^6.0.0",
    "helmet": "^3.14.0",
    "jsonwebtoken": "^8.3.0",
    "multer": "^1.4.1",
    "node-cache": "^4.2.0",
    "pg": "^7.5.0",
    "sequelize": "^5.15.1",
    "socket.io": "^2.1.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.1.6",
    "@types/chai-as-promised": "^7.1.0",
    "@types/chai-http": "^3.0.5",
    "@types/cron": "^1.3.0",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.42",
    "@types/jsonwebtoken": "^8.3.0",
    "@types/mocha": "^5.2.5",
    "@types/multer": "^1.3.7",
    "@types/node-cache": "^4.1.1",
    "@types/proxyquire": "^1.3.28",
    "@types/rewire": "^2.5.28",
    "@types/sequelize": "^4.27.28",
    "@types/sinon": "^5.0.5",
    "@types/socket.io": "^2.1.2",
    "@types/socket.io-client": "^1.4.32",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.2.0",
    "concurrently": "^4.0.1",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "dotenv": "^6.1.0",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.4",
    "nyc": "^13.1.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.14.3",
    "proxyquire": "^2.1.0",
    "rewire": "^4.0.1",
    "sinon": "^7.0.0",
    "socket.io-client": "^2.1.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.3"
  },
  "pre-commit": [
    "linter",
    "build",
    "test"
  ]
