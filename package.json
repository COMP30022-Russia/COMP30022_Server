{
  "name": "russia_server",
  "version": "1.0.0",
  "description": "Server for Team Russia",
  "main": "server.ts",
  "scripts": {
    "start": "node server.js",
    "dev": "npm run build && concurrently --kill-others \"tsc --watch\" \"nodemon dist/server.js\" \"cpx -w tests/**/*.png dist/\"",
    "build": "tsc && cpx tests/**/*.png dist/tests && cp package*.json dist/",
    "test": "cross-env PORT=5000 nyc --reporter=text-summary mocha -t 10000 --reporter=list dist/tests/index.js --exit",
    "prettier": "prettier --single-quote --tab-width 4 --write \"**/*.ts\"",
    "linter": "tslint -c tslint.json -p tsconfig.json",
    "report": "nyc report --reporter=html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/COMP30022-18/Russia_Server.git"
  },
  "author": "Team Russia",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/COMP30022-18/Russia_Server/issues"
  },
  "homepage": "https://github.com/COMP30022-18/Russia_Server#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cron": "^1.7.2",
    "express": "^4.17.1",
    "firebase-admin": "^8.9.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "multer": "^1.4.2",
    "node-cache": "^5.1.0",
    "pg": "^7.17.1",
    "sequelize": "^5.21.3",
    "socket.io": "^2.3.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/chai": "^4.2.7",
    "@types/chai-as-promised": "^7.1.2",
    "@types/cron": "^1.7.1",
    "@types/express": "^4.17.2",
    "@types/helmet": "0.0.45",
    "@types/jsonwebtoken": "^8.3.6",
    "@types/mocha": "^5.2.7",
    "@types/multer": "^1.3.10",
    "@types/node": "^13.1.8",
    "@types/proxyquire": "^1.3.28",
    "@types/rewire": "^2.5.28",
    "@types/sequelize": "^4.28.8",
    "@types/sinon": "^7.5.1",
    "@types/socket.io": "^2.1.4",
    "@types/socket.io-client": "^1.4.32",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-http": "^4.3.0",
    "concurrently": "^5.0.2",
    "cpx": "^1.5.0",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "mocha": "^7.0.0",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.19.1",
    "proxyquire": "^2.1.3",
    "rewire": "^4.0.1",
    "sinon": "^8.1.0",
    "socket.io-client": "^2.3.0",
    "tslint": "^5.20.1",
    "typescript": "^3.7.5"
  },
  "pre-commit": [
    "linter",
    "build",
    "test"
  ]
}
